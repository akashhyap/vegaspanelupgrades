---
// src/pages/contact-us.astro
import Layout from "../../layouts/Layout.astro";

const pageTitle = "Contact Us | Vegas Panel Upgrades | Free Estimates";
const pageDescription =
  "Contact Vegas Panel Upgrades for a free estimate on your electrical panel project. Call us, email us, or fill out our form to schedule a consultation in Las Vegas.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="bg-white text-gray-800">
    <!-- Page Header -->
    <section class="page-header-contact text-white">
      <div
        class="container mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-24 text-center"
      >
        <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-4">
          Contact Us
        </h1>
        <p class="text-lg md:text-xl max-w-3xl mx-auto text-gray-300">
          Ready to discuss your project? We're here to help. Contact us today
          for a free, no-obligation estimate for your home or business.
        </p>
      </div>
    </section>

    <!-- Main Content Area -->
    <section>
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 xl:py-24">
        <div class="grid lg:grid-cols-3 gap-12">
          <!-- Contact Form -->
          <div class="lg:col-span-2 bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">
              Send Us a Message
            </h2>
            <form action="#" method="POST" aria-label="Contact form">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label
                    for="first-name"
                    class="block text-sm font-medium text-gray-700"
                    >First Name</label
                  >
                  <input
                    type="text"
                    name="first-name"
                    id="first-name"
                    required
                    class="mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-accent focus:border-accent"
                  />
                </div>
                <div>
                  <label
                    for="last-name"
                    class="block text-sm font-medium text-gray-700"
                    >Last Name</label
                  >
                  <input
                    type="text"
                    name="last-name"
                    id="last-name"
                    required
                    class="mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-accent focus:border-accent"
                  />
                </div>
                <div class="sm:col-span-2">
                  <label
                    for="email"
                    class="block text-sm font-medium text-gray-700">Email</label
                  >
                  <input
                    type="email"
                    name="email"
                    id="email"
                    required
                    class="mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-accent focus:border-accent"
                  />
                </div>
                <div class="sm:col-span-2">
                  <label
                    for="phone"
                    class="block text-sm font-medium text-gray-700">Phone</label
                  >
                  <input
                    type="tel"
                    name="phone"
                    id="phone"
                    class="mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-accent focus:border-accent"
                  />
                </div>
                <div class="sm:col-span-2">
                  <label
                    for="message"
                    class="block text-sm font-medium text-gray-700"
                    >How can we help?</label
                  >
                  <textarea
                    id="message"
                    name="message"
                    rows="4"
                    required
                    class="mt-1 block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:ring-accent focus:border-accent"
                  ></textarea>
                </div>
              </div>
              <div class="mt-8">
                <button
                  type="submit"
                  class="w-full bg-accent text-black font-bold py-3 px-6 rounded-full text-lg hover:bg-accent-dark transition-colors duration-300"
                >
                  Submit Request
                </button>
              </div>
            </form>
          </div>

          <!-- Contact Info -->
          <div class="space-y-8">
            <div class="contact-info-card p-6 rounded-lg shadow-sm">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">
                Contact Information
              </h3>
              <div class="space-y-4 text-lg">
                <p class="flex items-center">
                  <span class="contact-icon mr-3">
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                      ></path>
                    </svg>
                  </span>
                  <a href="tel:702-555-1234" class="hover:text-accent"
                    >(702) 555-1234</a
                  >
                </p>
                <p class="flex items-center">
                  <span class="contact-icon mr-3">
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </span>
                  <a
                    href="mailto:quotes@vegaspanelupgrades.com"
                    class="hover:text-accent">quotes@vegaspanelupgrades.com</a
                  >
                </p>
                <p class="flex items-start">
                  <span class="contact-icon mr-3 mt-1">
                    <svg
                      class="w-6 h-6"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      ></path>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </span>
                  <span>1234 Electric Ave<br />Las Vegas, NV 89101</span>
                </p>
              </div>
            </div>

            <div class="contact-info-card p-6 rounded-lg shadow-sm">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">
                Business Hours
              </h3>
              <div class="space-y-2 text-lg">
                <p>
                  <span class="font-semibold">Monday - Friday:</span> 7:00 AM - 5:00
                  PM
                </p>
                <p>
                  <span class="font-semibold">Saturday:</span> 8:00 AM - 2:00 PM
                </p>
                <p><span class="font-semibold">Sunday:</span> Closed</p>
                <p class="text-red-600 font-bold">
                  24/7 Emergency Service Available
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Map Section -->
      <div class="pt-16 xl:pt-24">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">
          Our Service Area
        </h2>
        <div
          class="aspect-w-16 aspect-h-9 overflow-hidden"
        >
          <!-- Google Maps Embed for Las Vegas -->
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d206253.45012861438!2d-115.31508338371126!3d36.12491706210447!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80beb782a4f57dd1%3A0x3accd5e6d5b379a3!2sLas%20Vegas%2C%20NV%2C%20USA!5e0!3m2!1sen!2s!4v1693227510264!5m2!1sen!2s"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Map of our service area including Las Vegas, Henderson, Summerlin, and North Las Vegas"
          ></iframe>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Accent utilities (scoped) */
  .bg-accent {
    background-color: #f1b725;
  } /* amber-400 */
  .text-accent {
    color: #f1b725;
  }
  .border-accent {
    border-color: #f1b725;
  }
  .hover\:bg-accent-dark:hover {
    background-color: #f59e0b;
  } /* amber-500 */
  .ring-accent {
    --tw-ring-color: #f1b725;
  }

  /* Contact template */
  .page-header-contact {
    background-color: #1f2937;
  } /* gray-800 */
  .contact-info-card {
    background-color: #f9fafb;
  } /* gray-50 */
  .contact-icon {
    color: #1f2937;
  } /* gray-800 */
</style>
