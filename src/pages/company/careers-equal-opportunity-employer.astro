---
// src/pages/careers.astro
import Layout from "../../layouts/Layout.astro";

const pageTitle = "Careers | Vegas Panel Upgrades | Equal Opportunity Employer";
const pageDescription =
  "Join the team at Vegas Panel Upgrades. We are an Equal Opportunity Employer seeking licensed electricians and professionals committed to safety and quality.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="bg-white text-gray-800">
    <!-- Page Header -->
    <section class="page-header-careers text-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-24 text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-4">
          Careers at Vegas Panel Upgrades
        </h1>
        <p class="text-lg md:text-xl max-w-3xl mx-auto text-gray-300">
          Join a team dedicated to safety, craftsmanship, and powering our community. We're looking for skilled professionals who share our commitment to excellence.
        </p>
      </div>
    </section>

    <!-- Main Content Area -->
    <section class="py-16 xl:py-24">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <div class="prose prose-lg max-w-none mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Why Work With Us?</h2>
            <p>
              At Vegas Panel Upgrades, we're more than just a companyâ€”we're a team. We believe in investing in our employees, providing a safe and respectful work environment, and offering opportunities for growth. Our reputation is built on the quality of our people and the excellence of their work.
            </p>
          </div>

          <!-- Our Values -->
          <div class="grid md:grid-cols-3 gap-8">
            <div class="value-card p-6 rounded-lg text-center">
              <h3 class="text-xl font-bold text-gray-800">Safety First, Always</h3>
              <p class="text-gray-600 mt-2">We provide the best tools, training, and procedures to ensure our team works safely and efficiently.</p>
            </div>
            <div class="value-card p-6 rounded-lg text-center">
              <h3 class="text-xl font-bold text-gray-800">Commitment to Quality</h3>
              <p class="text-gray-600 mt-2">We take pride in our craftsmanship and stand behind every project we complete.</p>
            </div>
            <div class="value-card p-6 rounded-lg text-center">
              <h3 class="text-xl font-bold text-gray-800">Team &amp; Community</h3>
              <p class="text-gray-600 mt-2">We foster a supportive team environment and are proud to serve our Las Vegas community.</p>
            </div>
          </div>

          <!-- Open Positions -->
          <div class="my-16">
            <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Current Openings</h2>
            <div class="bg-white p-8 rounded-lg shadow-md">
              <p class="text-lg text-center text-gray-600">
                We are always looking for talented and licensed electricians to join our team. While we may not have specific openings at this moment, we encourage qualified candidates to submit their information for future consideration.
              </p>
              <div class="mt-6 text-center">
                <a href="/contact-us" class="text-accent font-semibold text-lg hover:underline">
                  Contact us to inquire about future opportunities &raquo;
                </a>
              </div>
            </div>
          </div>

          <!-- Equal Opportunity Employer -->
          <div class="eoe-statement p-8 rounded-lg border-l-4">
            <h2 class="text-3xl font-bold text-gray-900">Equal Opportunity Employer</h2>
            <p class="mt-4 text-lg text-gray-700">
              Vegas Panel Upgrades is an Equal Opportunity Employer. We are committed to creating a diverse and inclusive work environment. All qualified applicants will receive consideration for employment without regard to race, color, religion, gender, gender identity or expression, sexual orientation, national origin, genetics, disability, age, or veteran status. We believe that a diverse team is a strong team, and we encourage all qualified individuals to apply.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
    /* Accent utilities (scoped) */
    .bg-accent { background-color: #f1b725; } /* amber-400 */
    .text-accent { color: #f1b725; }
    .border-accent { border-color: #f1b725; }
    .hover\:bg-accent-dark:hover { background-color: #F59E0B; } /* amber-500 */
    .ring-accent { --tw-ring-color: #f1b725; }

    /* Careers template */
    .page-header-careers { background-color: #111827; } /* gray-900 */
    .value-card { background-color: #F9FAFB; } /* gray-50 */
    .eoe-statement { background-color: #F3F4F6; border-left-color: #f1b725; } /* gray-100 */
  </style>
