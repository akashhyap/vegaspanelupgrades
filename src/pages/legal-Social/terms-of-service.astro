---
// src/pages/terms-of-service.astro
import Layout from "../layouts/Layout.astro";

const pageTitle = "Terms of Service | Vegas Panel Upgrades";
const pageDescription =
  "Terms of Service for the Vegas Panel Upgrades website and our electrical services. Please read these terms carefully before using our service.";
const lastUpdated = "August 27, 2025";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="text-gray-800">
    <!-- Page Header -->
    <section class="page-header-legal text-white">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-24 text-center">
        <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-4">
          Terms of Service
        </h1>
        <p class="text-lg md:text-xl max-w-3xl mx-auto text-gray-300">
          Last Updated: {lastUpdated}
        </p>
      </div>
    </section>

    <!-- Main Content Area -->
    <section class="py-16 xl:py-24">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto ">
          <div class="prose prose-lg max-w-none policy-content">
            <p>
              Please read these Terms of Service ("Terms", "Terms of Service") carefully
              before using the vegaspanelupgrades.com website (the "Service") operated by
              Vegas Panel Upgrades ("us", "we", or "our").
            </p>
            <p>
              Your access to and use of the Service is conditioned on your acceptance of and
              compliance with these Terms. These Terms apply to all visitors, users, and
              others who access or use the Service.
            </p>
            <p>
              By accessing or using the Service you agree to be bound by these Terms. If you
              disagree with any part of the terms then you may not access the Service.
            </p>

            <h2>Intellectual Property</h2>
            <p>
