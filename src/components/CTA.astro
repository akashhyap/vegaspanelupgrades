<section class="cta-section py-16 xl:py-24 bg-gray-100">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row gap-8 lg:gap-12 items-center justify-center">
      
      <!-- Left Column - Contact Info -->
      <div class="w-full md:w-1/2">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Upgrade Your Electrical Panel?</h2>
        <p class="text-gray-700 text-lg mb-6">
          Our team of certified electricians is ready to help you with all your electrical needs. 
          Schedule a free consultation today to get started.
        </p>
        
        <div class="mt-5 mb-8 text-gray-700">
          <p class="flex items-center mb-3">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                clip-rule="evenodd"></path>
            </svg>
            123 Design Street, Art District
          </p>
          <p class="flex items-center mb-3">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
              ></path>
            </svg>
            +1 (555) 123-4567
          </p>
          <p class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
              ></path>
              <path
                d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
              ></path>
            </svg>
            hello@vegaspanelupgrades.com
          </p>
        </div>
      </div>
      
      <!-- Right Column - Contact Form -->
      <div class="w-full md:w-1/2">
        <div class="bg-white rounded-3xl shadow-xl p-8">
          <h3 class="text-2xl font-bold mb-4">Contact Us Now</h3>
          <form class="space-y-4">
            <div>
              <label
                for="cta-name"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Full Name <span class="text-red-500">*</span></label
              >
              <input
                type="text"
                id="cta-name"
                name="name"
                required
                class="w-full px-3 py-2 border border-gray-400 rounded-md focus:outline-none focus:ring-1 focus:ring-primary"
                placeholder="Your full name"
              />
            </div>

            <div>
              <label
                for="cta-email"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Email <span class="text-red-500">*</span></label
              >
              <input
                type="email"
                id="cta-email"
                name="email"
                required
                class="w-full px-3 py-2 border border-gray-400 rounded-md focus:outline-none focus:ring-1 focus:ring-primary"
                placeholder="your@email.com"
              />
            </div>

            <div>
              <label
                for="cta-phone"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Phone</label
              >
              <input
                type="tel"
                id="cta-phone"
                name="phone"
                class="w-full px-3 py-2 border border-gray-400 rounded-md focus:outline-none focus:ring-1 focus:ring-primary"
                placeholder="Phone Number"
              />
            </div>

            <div>
              <label
                for="cta-message"
                class="block text-sm font-medium text-gray-700 mb-1"
                >Message</label
              >
              <textarea
                id="cta-message"
                name="message"
                rows="4"
                class="w-full px-3 py-2 border border-gray-400 rounded-md focus:outline-none focus:ring-1 focus:ring-primary"
                placeholder="Tell us about your electrical needs..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full mt-4 py-3 bg-accent hover:bg-accent/80 text-black hover:text-white font-bold rounded-full transition duration-300"
            >
              Send Message
            </button>
          </form>
          <p class="text-sm text-gray-600 mt-4">
            Fields marked with <span class="text-red-500">*</span> are required
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-section {
    position: relative;
    overflow: hidden;
  }
</style>
