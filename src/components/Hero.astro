---
// Import the image using Astro's Image API
import { getImage } from "astro:assets";
import panelUpgrade from "../assets/images/panelupgrade-splash1.jpg";

// Get the optimized image URL
const optimizedImage = await getImage({ src: panelUpgrade });
const backgroundImageUrl = `url(${optimizedImage.src})`;
---

<section class="container-m">
  <div
    class="hero-section-bg flex lg:items-center"
    style={{
      backgroundImage: `linear-gradient(rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.55)), ${backgroundImageUrl}`,
    }}
  >
    <div class="hero-container w-full px-4 sm:px-6 xl:px-16 py-8 sm:py-12">
      <div
        class="flex flex-col md:flex-row lg:items-center justify-between gap-8 lg:gap-12"
      >
        <!-- Left Column - Text Content -->
        <div class="w-full md:w-1/2 text-left mx-auto max-w-md md:max-w-none">
          <p
            class="text-white text-base bg-white/20 inline-block px-4 py-2 rounded-full"
          >
            Powering Homes and Businesses Safely
          </p>
          <h1
            class="text-5xl lg:text-6xl xl:text-[65px] xl:pr-12 font-medium text-white leading-[1.16] mt-2"
          >
          Licensed Electrical Panel 
          <span class="">Upgrades in Las Vegas</span>
          </h1>
          <p class="text-white/80 text-base md:text-xl mt-6 mb-8 max-w-lg">
            Powering your home safely & reliably. We are your local, licensed electricians, not a referral service.
          </p>
          <div class="flex space-x-4 items-center mt-6 xl:mt-10">
            <a
              href="/contact/"
              class="inline-flex items-center justify-between px-4 sm:px-6 py-3 bg-white text-black font-bold rounded-full transition duration-300 text-sm sm:text-base w-full sm:w-auto xl:w-96"
            >
              <span class="mr-2 uppercase">Schedule Your Free Estimate</span>
              <span
                class="bg-accent p-1 rounded-full flex items-center justify-center w-8 h-8 sm:w-10 sm:h-10 flex-shrink-0"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-7 w-7 rotate-45"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M5.293 7.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L6.707 7.707a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"></path>
                </svg>
              </span>
            </a>
          </div>
        </div>

        <!-- Right Column - Contact Form -->
        <div class="w-full hidden lg:block md:w-4/12 mt-8 md:mt-0">
          <div class="bg-white rounded-4xl shadow-xl p-8">
            <h3 class="text-2xl font-bold mb-4">Get a Free Quote</h3>
            <form class="space-y-4">
              <div>
                <div>
                  <label
                    for="name"
                    class="block text-sm font-medium text-gray-700 mb-1"
                    >Full Name <span class="text-red-500">*</span></label
                  >
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-3 py-2 border border-gray-400 rounded-md focus:outline-none focus:ring-1 focus:ring-primary"
                    placeholder="Your full name"
                  />
                </div>
              </div>

              <div>
                <label
                  for="email"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Email <span class="text-red-500">*</span></label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-3 py-2 border border-gray-400 rounded-md focus:outline-none focus:ring-1 focus:ring-primary"
                  placeholder="your@email.com"
                />
              </div>

              <div>
                <label
                  for="phone"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Phone</label
                >
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-3 py-2 border border-gray-400 rounded-md focus:outline-none focus:ring-1 focus:ring-primary"
                  placeholder="Phone Number"
                />
              </div>

              <div>
                <label
                  for="service"
                  class="block text-sm font-medium text-gray-700 mb-1"
                  >Service Needed <span class="text-red-500">*</span></label
                >
                <select
                  id="service"
                  name="service"
                  required
                  class="w-full px-3 py-2 border border-gray-400 rounded-md focus:outline-none focus:ring-1 focus:ring-primary bg-white"
                >
                  <option value="" disabled selected>Select a service...</option
                  >
                  <option value="panel-upgrade">Panel Upgrade</option>
                  <option value="circuit-installation"
                    >Circuit Installation</option
                  >
                  <option value="safety-inspection"
                    >Electrical Safety Inspection</option
                  >
                  <option value="surge-protection">Surge Protection</option>
                  <option value="home-rewiring">Home Rewiring</option>
                  <option value="emergency-repair"
                    >Emergency Electrical Repair</option
                  >
                </select>
              </div>

              <button
                type="submit"
                class="w-full mt-4 py-3 bg-accent hover:bg-accent/80 text-black hover:text-white font-bold rounded-full transition duration-300"
              >
                Get Started
              </button>
            </form>
            <p class="text-sm text-gray-600 mt-4">
              Fields marked with <span class="text-red-500">*</span> are required
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section-bg {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    min-height: 450px;
    padding-top: 2rem;
    padding-bottom: 2rem;
    display: flex;
    align-items: center;
  }
  
  @media (min-width: 768px) {
    .hero-section-bg {
      min-height: 600px;
      padding-top: 3rem;
      padding-bottom: 3rem;
    }
  }

  @media (min-width: 1299px) {
    .container-m {
      padding-left: 24px;
      padding-right: 24px;
      border-radius: 30px;
    }
    .hero-section-bg {
      border-radius: 30px;
    }
  }
  @media (min-width: 1600px) {
    .container-m {
      max-width: 90%;
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>
