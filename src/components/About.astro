---
// Import the Image component and panel image
import { Image } from "astro:assets";
import panelImage from "../assets/images/panel.jpg";
import panelImage2 from "../assets/images/panel2.jpg";
---

<section class="about-section py-16 lg:py-24 xl:py-28 px-4 sm:px-6 xl:px-16">
  <div class="container mx-auto">
    <!-- About Header -->
    <div
      class="flex flex-col md:flex-row items-start justify-between mb-12 gap-8"
    >
      <!-- Left Column - Title -->
      <div class="w-full md:w-1/2">
        <span class="text-accent font-bold text-base font-manrope"
          >About us</span
        >
        <h2 class="text-4xl md:text-5xl font-medium leading-[1.1] mt-2">
          <span class="text-gray-400">Delivering </span>
          <span class="font-bold text-black"
            >Safe, Reliable, and Professional</span
          >
          <span class="text-gray-400"> Electrical Services</span>
        </h2>
      </div>

      <!-- Right Column - Description -->
      <div class="w-full md:w-1/2 self-end">
        <p class="text-gray-600 text-lg">
          With years of experience, we offer top-quality electrical services to
          keep your home and business powered safely.
          <a
            href="/about-us/"
            class="inline-flex items-center text-secondary font-manrope font-bold"
            >Learn More
            <span
              class="bg-accent p-1 rounded-full flex items-center justify-between w-6 h-6 ml-1"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 rotate-45"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.293 7.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L6.707 7.707a1 1 0 01-1.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
            </span>
          </a>
        </p>
      </div>
    </div>

    <!-- Image Gallery -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="rounded-2xl overflow-hidden shadow-lg h-96">
        <Image
          src={panelImage}
          alt="Electrical Panel Installation"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="rounded-2xl overflow-hidden shadow-lg h-96">
        <Image
          src={panelImage2}
          alt="Electrical Services"
          class="w-full h-full object-cover object-top-right"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .about-section {
    background-color: #fdfdfd;
  }

  .text-accent {
    color: #ffc107; /* Gold/yellow accent color based on site theme */
  }

  @media (min-width: 1299px) {
    .about-section {
      padding-left: 24px;
      padding-right: 24px;
    }
  }
</style>
